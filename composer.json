{
    "name": "dmasior/string-builder",
    "description": "StringBuilder for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Damian MÄ…sior",
            "email": "damian@dmasior.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Dmasior\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dmasior\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2"
    },
    "suggest": {
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.25",
        "slevomat/coding-standard": "^6.3"
    },
    "scripts": {
        "quality": [
            "@test",
            "@codestyle",
            "@phpstan"
        ],
        "test": "vendor/bin/phpunit",
        "codestyle": [
            "@phpcbf",
            "@phpcs"
        ],
        "phpcs": "vendor/bin/phpcs --standard=ruleset.xml src tests",
        "phpcbf": "vendor/bin/phpcbf --standard=ruleset.xml src tests",
        "phpstan": "vendor/bin/phpstan analyse -l 8 src tests"
    }
}
